<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="single_news_category_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/unit_10dp</item>
        <item name="android:padding">@dimen/unit_10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_dark_purple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="full_news_more_action_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/unit_10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">@dimen/unit_10dp</item>
        <item name="android:background">@drawable/bg_dark_purple</item>
    </style>

</resources>