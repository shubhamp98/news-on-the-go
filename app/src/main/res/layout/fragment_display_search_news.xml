<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchNewsFragment">

    <SearchView
        android:id="@+id/searchNews_SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="true"
        android:iconifiedByDefault="false"
        android:queryHint="Search for news eg. Science, Business"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchNewsList_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@+id/searchNews_SV"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/searchNewsInfo_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for your favorite news and it will be available here..."
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchNews_SV"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>